rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to read the menu (Customers & Admin)
    match /menu/{item} {
      allow read: if true;
      allow write: if true; 
    }

    // Allow anyone to read/write orders
    match /orders/{order} {
      allow read, write: if true;
    }
    
    // Default fallback for other collections
    match /{document=**} {
      allow read, write: if true;
    }
  }
}