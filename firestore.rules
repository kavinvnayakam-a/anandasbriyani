rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin helper: For this prototype, any authenticated user is treated as an admin
    function isAdmin() {
      return request.auth != null;
    }

    // Menu Items: Customers can browse, Admin can manage
    match /menu_items/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders: Customers can place (create) and track (read), Admin can update status or delete
    match /orders/{orderId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // Archived orders: Strictly Admin access
    match /order_history/{historyId} {
      allow read, write: if isAdmin();
    }

    // Daily Stats: Open for order counter transaction logic
    match /daily_stats/{statId} {
      allow read, write: if true;
    }

    // Settings (Print/Menu Config): Customers can read, Admin can edit
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Default fallback: Deny everything else
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}