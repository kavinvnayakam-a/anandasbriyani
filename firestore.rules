rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin helper: Only authenticated users (signed in via Console) are admins
    function isAdmin() {
      return request.auth != null;
    }

    // Menu Items: Customers can browse, Admin can manage
    match /menu_items/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders: Anyone can place (create) and track (read) without sign-in
    // They are strictly prohibited from editing (update) or deleting data
    match /orders/{orderId} {
      allow read, create: if true;
      allow update, delete: if isAdmin();
    }

    // Order History: Publicly readable and creatable for logging purposes
    // Immutable for guests, manageable by Admin
    match /order_history/{historyId} {
      allow read, create: if true;
      allow update, delete: if isAdmin();
    }

    // Daily Stats: Open for all to allow the transaction-based order numbering (#0001) to function
    match /daily_stats/{statId} {
      allow read, write: if true;
    }

    // Settings (Print/Menu Config): Customers can read, Admin can edit
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Default fallback: Allow public reading of all documents, but restrict writes to Admins
    match /{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}